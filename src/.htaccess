# Allow kitepaint domains to make requests to this repo's uploaded files
<FilesMatch "\.(html|js|css|png|jpg|gif|svg|pdf)$">
    <IfModule mod_headers.c>
        SetEnvIf Origin "http(s)?://(www\.|\.)?(kitepaint.com|beta.kitepaint.com)$" AccessControlAllowOrigin=$0
        Header add Access-Control-Allow-Origin %{AccessControlAllowOrigin}e env=AccessControlAllowOrigin
        Header merge Vary Origin
    </IfModule>
</FilesMatch>
